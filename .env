# EIP-7702 Smart Account 配置
# ================================

# 私钥配置 (请替换为您的实际私钥)
PRIVATE_KEY=

# RPC 配置
RPC_URL=

# 是否启用 hex 批量交易功能
ENABLE_HEX_BATCH=true

# 是否启用标准批量交易功能
ENABLE_STANDARD_BATCH=true

# Hex 批量交易配置文件路径 (可选，默认为 call_data/hex-batch-config.json)
HEX_BATCH_CONFIG_FILE=call_data/hex-batch-config.json

# 标准批量交易配置文件路径 (可选，默认为 call_data/standard-batch-config.json)
STANDARD_BATCH_CONFIG_FILE=call_data/standard-batch-config.json

# 高级配置
# ================================

# Gas 限制 (可选，默认自动估算)
GAS_LIMIT=300000

# Gas 价格策略 (可选)
# - auto: 自动估算
# - fast: 快速确认
# - standard: 标准确认
# - slow: 慢速确认
GAS_PRICE_STRATEGY=auto

# 交易超时时间 (秒)
TRANSACTION_TIMEOUT=300

# 重试次数
MAX_RETRIES=3

# 日志级别
LOG_LEVEL=info

# 安全配置
# ================================

# 最大单笔交易金额 (wei)
MAX_SINGLE_TRANSACTION_VALUE=1000000000000000000

# 最大批量交易总金额 (wei)
MAX_BATCH_TOTAL_VALUE=5000000000000000000

# 允许的目标地址白名单 (逗号分隔，留空表示不限制，可选)
ALLOWED_TARGETS=

# 是否启用地址白名单验证（true/false）
ENABLE_ADDRESS_WHITELIST=false

# 智能账户实现合约地址（（运行 deploy.sh 后会自动添加））
SMART_ACCOUNT_ADDRESS=
